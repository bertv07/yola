<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Actualizar Producto</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Actualizar Producto</h1>
  <div class="centrar">
    <form action="/admin/update-product/<%= product._id %>" method="POST" enctype="multipart/form-data">
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" value="<%= product.name %>" required>
  
      <label for="description">Descripción:</label>
      <textarea id="description" name="description" required><%= product.description %></textarea>
  
      <label for="price">Precio:</label>
      <input type="number" id="price" name="price" value="<%= product.price %>" required>
  
      <label for="stock">Stock:</label>
      <input type="number" id="stock" name="stock" value="<%= product.stock %>" required>
  
      <label for="colors">Colores (separados por comas):</label>
      <input type="text" id="colors" name="colors" value="<%= product.colors.join(',') %>" required>
  
      <label for="images">Imágenes:</label>
      <input type="file" id="images" name="images" multiple accept="image/*">
  
      <% if (product.images && product.images.length > 0) { %>
        <div>
          <h3>Imágenes actuales:</h3>
          <% product.images.forEach(image => { %>
            <% if (image.data) { %>
              <img src="data:<%= image.contentType %>;base64,<%= image.data.toString('base64') %>" alt="Imagen del producto" style="width: 100px; height: auto;">
            <% } else { %>
              <p>Imagen no disponible</p>
            <% } %>
          <% }) %>
        </div>
      <% } %>
  
      <button type="submit">Actualizar Producto</button>
    </form>

  </div>
</body>
</html>
